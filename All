public static void allFiles() throws Exception
	{
	String sourceDirectory;
	Scanner scan = new Scanner(System.in);
	System.out.println("Enter Source Directory path :");
	sourceDirectory = scan.nextLine();
	File directory=new File(sourceDirectory);
    int fileCount=directory.list().length;
		int countNumberOfFiles[] = new int[fileCount];
		path.FileNames(countNumberOfFiles, sourceDirectory);
	}
